@page
@model YasayanKutuphane.Pages.Admin.Yorum.CreateModel

@{
    ViewData["Title"] = "Oluştur";
}

@using  Microsoft.AspNetCore.Http;
@if (HttpContext.Session.GetString("GirisYapanEmail") != null)
{
    Layout = "~/Pages/Shared/_Layout1.cshtml";

    <h1>Oluştur</h1>

    <h4>Yorum</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @{ }
                <div class="form-group">
                    <label asp-for="Yorum.Icerik" class="control-label"></label>
                    <input asp-for="Yorum.Icerik" class="form-control" />
                    <span asp-validation-for="Yorum.Icerik" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Oluştur" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index" class="btn btn-dark">
            <i class="fas fa-home"></i> &nbsp;
            Geri Dön
        </a><br />
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
}
else
{
    <h1>Bu Sayfaya Görüntülenemiyor.</h1>
    <h3>Sayfayı görüntülemek için giriş yapınız</h3>
}